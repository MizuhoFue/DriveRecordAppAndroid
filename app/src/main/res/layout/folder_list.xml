<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCFC"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".FolderCreate"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="91dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="223dp"
            android:layout_marginBottom="88dp"
            android:text="@string/day"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/returnMap"
            app:layout_constraintEnd_toStartOf="@+id/gomi"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tripname"
            android:layout_width="184dp"
            android:layout_height="56dp"
            android:layout_marginTop="249dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="77dp"
            android:text="@string/tripname"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/returnMap"
            app:layout_constraintEnd_toStartOf="@+id/gomi"
            app:layout_constraintStart_toEndOf="@+id/date"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/gomi"
            android:layout_width="60dp"
            android:layout_height="54dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="88dp"
            android:layout_weight="1"
            android:text="@string/gomi"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/returnMap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/date" />

        <Button
            android:id="@+id/returnMap"
            android:layout_width="150dp"
            android:layout_height="57dp"
            android:layout_marginStart="122dp"
            android:layout_marginBottom="155dp"
            android:text="@string/go_map"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/date"
            app:layout_constraintTop_toBottomOf="@+id/tripname" />

        <Button
            android:id="@+id/settings"
            android:layout_width="72dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="257dp"
            android:backgroundTint="#F6F3F3"
            android:text="@string/settings"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/addFolder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/gomi"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="221dp"
            android:clickable="true"
            app:backgroundTint="#FBF9F9"
            app:fabSize="auto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings"
            app:maxImageSize="50dp"
            app:srcCompat="@android:drawable/ic_menu_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>